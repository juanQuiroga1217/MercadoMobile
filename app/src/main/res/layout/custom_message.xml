<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivMessageIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_28"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivMessageIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/margin_28"
        android:layout_marginTop="@dimen/margin_28"
        android:layout_marginEnd="@dimen/margin_28"
        android:layout_marginBottom="@dimen/margin_16"
        android:maxLines="10"
        android:textAlignment="center"
        android:textSize="@dimen/text_16"
        />

    <Button
        android:id="@+id/btnOkMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtMessage"
        android:layout_margin="@dimen/margin_16"
        android:background="@color/colorMiddleYellow"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_16"
        android:textStyle="bold|italic"
        />




</RelativeLayout>